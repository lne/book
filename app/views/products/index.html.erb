<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Summary</th>
    <th>Published at</th>
    <th>Price</th>
    <th>Pages</th>
    <th>Published by</th>
    <th>Characters</th>
    <th>Rails env=production</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.author %></td>
    <td><%= product.summary %></td>
    <td><%= product.published_at %></td>
    <td><%= product.price %></td>
    <td><%= product.pages %></td>
    <td><%= product.published_by %></td>
    <td><%= product.characters %></td>
    <td><%= product.RAILS_ENV=production %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

